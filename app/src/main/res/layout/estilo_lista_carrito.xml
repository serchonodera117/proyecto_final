<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/estilo_carrito"
    android:layout_width="340dp"
    android:layout_height="80dp"
    android:layout_marginTop="10dp"
    card_view:cardBackgroundColor="#FFFF"
    android:background="@drawable/sombra"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/carrito_imagen"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            card_view:srcCompat="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/carrito_NombreProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Nombre Producto"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/carrito_NombreNegocio"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del negocio"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                />

            <TextView
                android:id="@+id/carrito_cantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Cantidad: 1"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:textSize="10sp" />



            <TextView
                android:id="@+id/carrito_Precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:text="Total: $0.00"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_marginTop="5dp"/>



        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>