<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarNegocioNuevo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/Volver_miPerfil"
                        android:layout_width="61dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        app:srcCompat="?attr/actionModeCloseDrawable"
                        app:tint="@color/design_default_color_secondary_variant"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/textView3b"
                        android:layout_width="322dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="8dp"
                        android:text="Volver"
                        android:textColor="#726AE4" />
                </LinearLayout>

                <!--Negocio formulario-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del negocio" />

                    <EditText
                        android:id="@+id/nuevoNombreNegocio"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:hint="Nombre del negocio" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Imagen del negocio" />

                    <EditText
                        android:id="@+id/nuevourlImagenNegocio"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:hint="Url del Logo" />

                    <TextView
                        android:id="@+id/textformaspago"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Formas de pago"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <CheckBox
                        android:id="@+id/nuevoEfectivoSelect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Efectivo" />

                    <CheckBox
                        android:id="@+id/nuevoTarjetaSelect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tarjeta" />

                    <CheckBox
                        android:id="@+id/nuevoOxxoSelect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pago en oxxo" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tipos de oferta"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <CheckBox
                        android:id="@+id/nuevoOfertaProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Venta de productos" />

                    <CheckBox
                        android:id="@+id/nuevoOfertaServicio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Venta de servicios" />


                    <TextView
                        android:id="@+id/textView2b1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Municipio del negocio"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <Spinner
                        android:id="@+id/nuevoMunicipioNegocio"
                        android:layout_width="309dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Colonia del negocio" />

                    <EditText
                        android:id="@+id/nuevoColoniaNegocio"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:hint="Colonia del negocio" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Direccion del negocio" />

                    <EditText
                        android:id="@+id/nuevoDireccionNegocio"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:hint="Direccion del negocio" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Categiría del negocio: Elija una categoría " />

                <TextView
                    android:id="@+id/nuevoCategoriaSeleccionada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- - -"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/nuevoCategoriasExistentes"
                        android:layout_width="222dp"
                        android:layout_height="120dp"
                        android:background="@drawable/sombra"
                        android:elevation="6dp"
                        android:fadeScrollbars="false"
                        android:text="prueba" />


                    <Button
                        android:id="@+id/nuevoAgregarCategoria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nueva Categoría" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/nuevocontenedorCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre de la categoría: " />

                        <EditText
                            android:id="@+id/nuevoNombreCategoria"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Categoria. . ."
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="123dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Imagen de la categoria:" />

                        <EditText
                            android:id="@+id/nuevourlImagenCategoria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="Url de la imagen"
                            android:inputType="textPersonName"
                            tools:ignore="TouchTargetSizeCheck" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/nuevoCerrarCategoria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancelar"
                            tools:ignore="TouchTargetSizeCheck" />

                        <Button
                            android:id="@+id/nuevoGuardarCategoria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="Añadir categoria" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/nuevoRegistrarNegocio"
                        android:layout_width="130dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        android:backgroundTint="#0D06D1"
                        android:minHeight="48dp"
                        android:text="Guardar"
                        app:srcCompat="@android:drawable/ic_menu_save"
                        app:tint="#FFFFFF"
                        tools:ignore="SpeakableTextPresentCheck" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>