<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".productoSeleccionadoCliente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/barraSuperiorModal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/sombra"
            android:elevation="7dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/simplementeVolver"
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                app:srcCompat="?attr/actionModeCloseDrawable"
                app:tint="@color/design_default_color_secondary_variant"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView3bx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Volver"
                android:textColor="#726AE4" />

            <ImageButton
                android:id="@+id/agregarAlCarrito"
                android:layout_width="43dp"
                android:layout_height="36dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                app:srcCompat="@drawable/icono_addtocarritocompras"
                app:tint="@color/design_default_color_secondary_variant"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagenProductoConsultado"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_launcher_background" />

                <TextView
                    android:id="@+id/consultaCNombreProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Nombre del producto"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/consultaCTipoOferta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Tipo de oferta:"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/consultaCnombreNegocio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="nombre del negocio"
                    android:textColor="#7A6161" />


                <TextView
                    android:id="@+id/consultaCSeccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Sección:  la secion"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textSize="12sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp">
                    <ImageView
                        android:id="@+id/e1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/icono_estrella_vacia"/>

                    <ImageView
                        android:id="@+id/e2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/icono_estrella_vacia" />

                    <ImageView
                        android:id="@+id/e3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/icono_estrella_vacia" />

                    <ImageView
                        android:id="@+id/e4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/icono_estrella_vacia" />

                    <ImageView
                        android:id="@+id/e5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/icono_estrella_vacia" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="292dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/sombra"
                        android:elevation="2dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Precio:"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#040303" />

                        <TextView
                            android:id="@+id/consultaCPrecio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="$0.00"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/disponibilidadProducto"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/sombra"
                        android:elevation="2dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Disponibles:"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#040303" />

                        <TextView
                            android:id="@+id/consultaCExistencias"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="0"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/sombra"
                    android:elevation="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/consultaCPrecioEnvio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:text="Precio de envío: $0.00" />
                </LinearLayout>

                <!--Botón y caja de texto para incrementar o decrementar el prodicro-->

                <LinearLayout
                    android:id="@+id/cantidadProducto_variable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/decremento"
                        android:layout_width="43dp"
                        android:layout_height="48dp"
                        android:background="@color/white"

                        android:src="@drawable/icono_decremento"
                        app:tint="#320880"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <EditText
                        android:id="@+id/CantidadAVender"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:text="1"

                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/incremento"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/white"

                        android:src="@drawable/icono_incremento"
                        app:tint="#220655"
                        tools:ignore="SpeakableTextPresentCheck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="2dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/desplegarComentarios"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginRight="160dp"
                        android:background="@drawable/botonredondeado"
                        android:layout_gravity="center_vertical"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/comprarProductoServicio"
                        android:layout_width="53dp"
                        android:layout_height="48dp"
                        android:background="#1C3DA1"
                        app:srcCompat="@drawable/icono_comprar"
                        app:tint="#FFFFFF"
                        tools:ignore="SpeakableTextPresentCheck" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cajaLosComentarios"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comentarios"
                        android:textSize="10sp"
                        android:layout_gravity="center_horizontal"/>

                    <ProgressBar
                        android:id="@+id/progressBar4"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="5dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/comentarios_ver"
                        android:layout_width="wrap_content"
                        android:layout_height="430dp"
                        android:layout_gravity="center_horizontal" />

                    <ProgressBar
                        android:id="@+id/progressBar5c"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="5dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/cajaComentario"
                            android:layout_width="257dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="5dp"
                            android:hint="Comentar. . ."
                            android:inputType="textImeMultiLine" />

                        <ImageButton
                            android:id="@+id/comentarComentario"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:background="@drawable/botonredondeado"
                            app:srcCompat="@drawable/ic_baseline_send_24"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressBar5cd"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cerrarModal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/EliminarElemento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:backgroundTint="#CA0404"
                        android:text="Borrar" />

                    <Button
                        android:id="@+id/ocultarModal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Cerrar" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>